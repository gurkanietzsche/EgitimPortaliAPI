            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Çıkış yapmak istediğinize emin misiniz?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Mevcut oturumu sonlandırmak için "Çıkış Yap" butonuna tıklayın.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">İptal</button>
                    <button class="btn btn-primary" id="logoutBtn">Çıkış Yap</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/sbadmin2/vendor/jquery/jquery.min.js"></script>
    <script src="~/sbadmin2/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/sbadmin2/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/sbadmin2/js/sb-admin-2.min.js"></script>

    // AdminPanel.cshtml dosyasının script bölümünde değiştirilecek JavaScript kodu

    // AdminPanel.cshtml dosyasının script bölümünü tamamen bu kodla değiştirin

    <script>
        $(document).ready(function() {
            // Dashboard verilerini yükle
            loadDashboardData();

            function loadDashboardData() {
                // Kursları say
                $.ajax({
                    url: "/Home/GetCourse",
                    type: "GET",
                    success: function(response) {
                        if (response.success) {
                            $("#totalCourses").text(response.data.length || 0);

                            // Son eklenen kursları göster
                            displayLatestCourses(response.data);
                        } else {
                            console.error("Kurslar yüklenirken hata:", response.message);
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error("Kurslar AJAX hatası:", error);
                    }
                });

                // Kategorileri say
                $.ajax({
                    url: "/Home/GetCategories",
                    type: "GET",
                    success: function(response) {
                        if (response.success) {
                            $("#totalCategories").text(response.data.length || 0);

                            // Kategorileri göster
                            displayCategories(response.data);
                        } else {
                            console.error("Kategoriler yüklenirken hata:", response.message);
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error("Kategoriler AJAX hatası:", error);
                    }
                });
            }

            function displayLatestCourses(courses) {
                let html = '';
                if (courses.length === 0) {
                    html = '<p class="text-muted text-center">Henüz kurs bulunmamaktadır.</p>';
                } else {
                    // Son 5 kursu göster
                    const latestCourses = courses.slice(-5).reverse();

                    latestCourses.forEach(function(course) {
                        html += `
                            <div class="row mb-2">
                                <div class="col-8">
                                    <h6 class="mb-1">${course.title}</h6>
                                    <small class="text-muted">${course.categoryName || 'Kategorisiz'}</small>
                                </div>
                                <div class="col-4 text-right">
                                    <span class="font-weight-bold text-success">${course.price} TL</span>
                                </div>
                            </div>
                            <hr class="mt-2 mb-2">
                        `;
                    });
                }

                $("#coursesList").html(html);
            }

            function displayCategories(categories) {
                let html = '';
                if (categories.length === 0) {
                    html = '<p class="text-muted text-center">Henüz kategori bulunmamaktadır.</p>';
                } else {
                    categories.forEach(function(category) {
                        html += `
                            <div class="row mb-2">
                                <div class="col-9">
                                    <h6 class="mb-1">${category.name}</h6>
                                    <small class="text-muted">${category.description || 'Açıklama yok'}</small>
                                </div>
                                <div class="col-3 text-right">
                                    <span class="badge badge-primary">ID: ${category.id}</span>
                                </div>
                            </div>
                            <hr class="mt-2 mb-2">
                        `;
                    });
                }

                $("#categoriesList").html(html);
            }

            // Çıkış işlemi
            $("#logoutBtn").click(function(e) {
                e.preventDefault();
                $.ajax({
                    type: "POST",
                    url: "/Home/Logout",
                    success: function(response) {
                        if (response.success) {
                            window.location.href = "/";
                        }
                    },
                    error: function() {
                        alert("Çıkış işlemi sırasında bir hata oluştu.");
                    }
                });
            });

            // Sidebar menu click events - ÇALIŞAN LİNKLER
            $("#kursListesi").click(function(e) {
                e.preventDefault();
                // Kurs yönetim sayfasına yönlendir
                window.location.href = "/Home/CourseManagement";
            });

            $("#kursEkle").click(function(e) {
                e.preventDefault();
                // Kurs yönetim sayfasına yönlendir ve modal açılacak şekilde işaretle
                window.location.href = "/Home/CourseManagement?action=add";
            });

            $("#kategoriListesi").click(function(e) {
                e.preventDefault();
                // Kategori yönetim sayfasına yönlendir
                window.location.href = "/Home/CategoryManagement";
            });

            $("#kategoriEkle").click(function(e) {
                e.preventDefault();
                // Kategori yönetim sayfasına yönlendir ve modal açılacak şekilde işaretle
                window.location.href = "/Home/CategoryManagement?action=add";
            });

            $("#kullaniciListesi").click(function(e) {
                e.preventDefault();
                alert("Kullanıcı Yönetimi sayfası yakında eklenecektir.\n\nBu bölümde:\n• Tüm kullanıcıları görüntüleyebileceksiniz\n• Kullanıcı rollerini düzenleyebileceksiniz\n• Kullanıcıları aktif/pasif yapabileceksiniz");
            });
        });
    </script>

</body>
